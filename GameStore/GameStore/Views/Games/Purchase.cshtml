@model PurchaseFormModel

<h1 style="text-align: center">Purchase</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="CardNumber"></label>
        <input asp-for="CardNumber" class="form-control" placeholder="Enter name.">
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExpirationDate"></label>
        <input asp-for="ExpirationDate" class="form-control" placeholder="Enter name.">
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CCV"></label>
        <input asp-for="CCV" class="form-control" placeholder="Enter name.">
        <span asp-validation-for="CCV" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
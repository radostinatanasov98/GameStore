@model GameDetailsViewModel

<div class="card" style="margin-top: 10px; width: 100%; height: 800px;">
    <div class="card-header" style="text-align: center; font-weight: bold; font-size: 150%;">
        @Model.Name
    </div>
    <div class="card-body">
        <center>
            <img src="@Model.CoverImageUrl" class="img" style="height: 375px; width: 300px;" />
        </center>  
        <div style="text-align: center; margin-top: 50px;">
            <h5 class="card-title">@Model.PublisherName</h5>
            <p class="card-text">@Model.PegiRating</p>
            <a asp-area="" asp-controller="Games" asp-action="All" class="btn btn-primary">PURCHASE</a>
        </div>
    </div>
</div>
@model EditProfileFormModel

<h1 style="text-align: center">Edit Profile</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.PictureUrl">Profile Picture</label>
        <input asp-for="@Model.PictureUrl" type="text" class="form-control" placeholder="Enter picture url.">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Description">Description</label>
        <textarea  asp-for="@Model.Description" class="form-control" rows="3"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
 </form>
@model ClientProfileViewModel

<link rel="stylesheet" href="~/css/HomePage.css" />

<div class="container emp-profile">
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="@Model.ProfilePictureUrl" style="width: 225px; height: 150px;" />
                    @if (Model.ClientId == Model.ProfileId)
                     {
                        <a class="btn btn-primary" asp-area="" asp-controller="Clients" asp-action="RemoveProfilePicture" asp-route-ProfileId="@Model.ProfileId" style="background-color: red; margin-top: 5px; margin-left: 5%;">Remove Profile Picture</a>
                     }
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.Username
                    </h5>
                    <h6>
                        @Model.Description
                    </h6>
                    <p class="proile-rating">
                        @if (Model.ReviewsCount < 1)
                         {
                            <p>This user hasn't written any reviews.</p>
                         }
                         else
                         {
                            <p>Reviews Count : </p><span>@Model.ReviewsCount</span>
                         }
                    </p>
                    <p class="proile-rating">
                        @if (Model.AvarageRating < 1)
                         {
                            <p>This user hasn't rated any games.</p>
                         }
                         else
                         {
                            <p>Avarage Rating :</p> <span>@Model.AvarageRating.ToString("F2")/5</span>
                         }
                     </p>
                     <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary active" id="games-tab" data-toggle="tab" href="#games" role="tab" aria-controls="games" aria-selected="true">Games</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" id="reviews-tab" data-toggle="tab" href="#reviews" role="tab" aria-controls="profile" aria-selected="false">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" id="friends-tab" data-toggle="tab" href="#friends" role="tab" aria-controls="friends" aria-selected="false">Friends</a>
                        </li>
                     </ul>
                </div>
            </div>
            <div class="col-md-2">
                @if (Model.ProfileId == Model.ClientId)
                 {
                    <a asp-area="" asp-controller="Clients" asp-action="Edit" asp-route-ProfileId="@Model.ProfileId" class="btn btn-primary">Edit Profile</a>
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" value="Account" style="margin-top: 5px;">Account</a>
                 }
                 else if (Model.ProfileId != Model.ClientId)
                 {
                    if (!Model.AreFriends)
                    {
                        <input type="submit" asp-area="" asp-controller="Clients" asp-action="Profile" asp-route-ProfileId="@Model.ProfileId" class="btn btn-primary" value="Add Friend" style="margin-top: 5px;" />
                    }
                    else if (Model.AreFriends)
                    {
                        <input type="submit" asp-area="" asp-controller="Clients" asp-action="Decline" asp-route-RequestId="@Model.RelationId" class="btn btn-primary" value="Remove Friend" style="margin-top: 5px;" />
                    }
                 }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="games" role="tabpanel" aria-labelledby="games-tab">
                        @if (Model.AreGamesPrivate && Model.ProfileId != Model.ClientId)
                         {
                            <div class="row">
                                <div class="col-md-12" style="display: inline-block; text-align: center;">
                                    <h3>This user's games are private.</h3>
                                </div>
                            </div>
                         }
                         else
                         {
                            <div class="row" style="float: right;">
                            @foreach (var game in Model.Games)
                             {
                                <div class="col-md-5">
                                    <div class="img-container" style="margin-top: 15px;">
                                        <img src="@game.CoverImageUrl" class="image">
                                        <a asp-area="" asp-controller="Games" asp-action="Details" asp-route-GameId="@game.GameId" class="overlay">
                                            <div class="text">@game.Name</div>
                                        </a>
                                    </div>
                                </div>
                             }
                            </div>
                         }
                    </div>
                    <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                        <div class="row" style="float:right;">
                            @foreach (var review in Model.Reviews)
                             {
                                <div class="col-md-6">
                                    <div class="card-body">
                                        <div class="card">
                                            <div class="card-header">@review.Username</div>
                                            <div class="card-body">
                                                <blockquote class="blockquote mb-0">
                                                    <h3>@review.Caption</h3>
                                                    <p>@review.Content</p>
                                                    <footer style="font-size: 15px; color: dimgray;">@review.Rating / 5</footer>
                                                </blockquote>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                             }
                        </div>
                    </div>
                    <div class="tab-pane fade" id="friends" role="tabpanel" aria-labelledby="friends-tab">
                        @if (Model.AreFriendsPrivate && Model.ClientId != Model.ProfileId)
                         {
                            <div class="row">
                                <div div class="col-md-12" style="display: inline-block; text-align: center;">
                                    <h3>This user's friends are private.</h3>
                                </div>
                            </div>
                         }
                         else
                         {
                            <div class="row" style="float:right;">
                           @foreach (var friend in Model.Friends)
                            {
                                <div class="col-md-3">
                                    @if (friend.AreFriends)
                                     {
                                        <div class="card" style="width: 12rem; margin: 5px;">
                                            <div class="img-container" style="margin-top: 15px; margin-left: 10%; margin-right: 10%;">
                                                <img src="@friend.ProfilePictureUrl" class="image">
                                                <a asp-area="" asp-controller="Clients" asp-action="Profile" asp-route-ProfileId="@friend.FriendId" class="overlay">
                                                    <div class="text">@friend.Username</div>
                                                </a>
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title">@friend.Username</h5>
                                                    @if (friend.OwnerId == friend.ClientId)
                                                     {
                                                        <a type="submit" asp-area="" asp-controller="Clients" asp-action="Decline" asp-route-RequestId="@friend.Id" class="btn btn-primary">Unfriend</a>
                                                     }
                                            </div>
                                        </div>
                                     }
                                    else if (friend.OwnerId == friend.ClientId && friend.HasRequest)
                                    {
                                        <div class="card" style="width: 12rem;">
                                            <div class="card-body">
                                                <div class="img-container" style="margin-top: 15px; margin-left: 10%; margin-right: 10%;">
                                                    <img src="@friend.ProfilePictureUrl" class="image">
                                                        <a asp-area="" asp-controller="Clients" asp-action="Profile" asp-route-ProfileId="@friend.FriendId" class="overlay">
                                                            <div class="text">@friend.Username</div>
                                                        </a>
                                                </div>
                                                <h5 class="card-title">@friend.Username</h5>
                                                <a type="submit" asp-area="" asp-controller="Clients" asp-action="Accept" asp-route-RequestId="@friend.Id" class="btn btn-primary">Accept</a>
                                                <a type="submit" asp-area="" asp-controller="Clients" asp-action="Decline" asp-route-RequestId="@friend.Id" class="btn btn-primary">Decline</a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            </div>
                         }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
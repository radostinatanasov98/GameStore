@model BecomePublisherFormModel

<form method="post">
    <div class="col-md-6 offset-md-3 col-sm-3 text-center bold">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter your company name.">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PictureUrl"></label>
            <input asp-for="PictureUrl" class="form-control" placeholder="Enter logo url.">
            <span asp-validation-for="PictureUrl" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>